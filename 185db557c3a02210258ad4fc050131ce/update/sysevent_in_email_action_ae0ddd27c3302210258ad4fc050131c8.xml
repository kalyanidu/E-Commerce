        <script><![CDATA[(function runAction(email, email_action, event) {
    var lines = email.body_text.split('\n');
    var callerEmail = lines[0].trim();
    var shortDesc = lines[1].trim();

    // Set caller
    var userGR = new GlideRecord('sys_user');
    userGR.addQuery('email', callerEmail);
    userGR.query();
    if (userGR.next()) {
        incident.caller_id = userGR.sys_id;
    }

    // Set other fields
    incident.impact = 2; // Medium
    incident.urgency = 3; // Low
    incident.assignment_group.setDisplayValue('Incident Management');
    incident.short_description = shortDesc;
    incident.description = email.body_text;

})(email, email_action, event);
]]></script>
